#Any time rm -rf is used here, it is because rmdir fails thanks to Mac's .DS_Store files invading all directories. They should be empty by the time they're to be deleted'
echo 'DATA MOVEMENT OPERATION'
echo 'CONFIGURATION: FACE DETECTOR'

echo 'rm -rf positives'
rm -rf positives
echo 'rm -rf negatives'
rm -rf negatives

echo 'mkdir positives'
mkdir positives
echo 'mkdir negatives'
mkdir negatives

echo 'cp -R ../../Dropbox/dataset/face\ detector/positives/ positives/'
cp -R ../../Dropbox/dataset/face\ detector/positives/ positives/
echo 'cp -R ../../Dropbox/dataset/face\ detector/negatives/ negatives/'
cp -R ../../Dropbox/dataset/face\ detector/negatives/ negatives/

echo 'mv positives/closed\ eyes/* positives/'
mv positives/closed\ eyes/* positives/

echo 'mv positives/fliph/* positives/'
mv positives/fliph/* positives/

echo 'mv positives/rotate_-30/* positives/'
mv positives/rotate_-30/* positives/

echo 'positives/rotate_30/* positives/'
mv positives/rotate_30/* positives/

echo 'cd positives'
cd positives

echo 'rm -rf rotate_30'
rm -rf rotate_30

echo 'rm -rf rotate_-30'
rm -rf rotate_-30

echo 'rm -rf fliph'
rm -rf fliph

echo 'rm -rf closed\ eyes'
rm -rf closed\ eyes

echo 'cd ../'
cd ../

echo 'mv positives/open\ eyes/* positives/'
mv positives/open\ eyes/* positives/
echo 'mv positives/fliph/* positives/'
mv positives/fliph/* positives/
echo 'mv positives/rotate_-30/* positives/'
mv positives/rotate_-30/* positives/
echo 'mv positives/rotate_30/* positives/'
mv positives/rotate_30/* positives/

echo 'cd positives'
cd positives

echo 'rm -rf rotate_30'
rm -rf rotate_30
echo 'rm -rf rotate_-30'
rm -rf rotate_-30 
echo 'rm -rf fliph'
rm -rf fliph

echo 'rm -rf open\ eyes'
rm -rf open\ eyes
echo 'cd ../'
cd ../

echo '---POSITIVES DONE---'
echo ''

#-----------------------NEGATIVES-------------------
echo 'mv negatives/fliph/* negatives/'
mv negatives/fliph/* negatives/

echo 'rm -rf negatives/fliph'
rm -rf negatives/fliph

echo '---NEGATIVES DONE---'
echo ''
echo 'DATA MOVEMENT COMPLETE'
